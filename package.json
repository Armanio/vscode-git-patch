{
    "name": "gitpatch",
    "displayName": "Git Patch",
    "description": "Create & apply a Git patch",
    "version": "0.0.2",
    "publisher": "paragdiwan",
    "engines": {
        "vscode": "^1.13.0"
    },
    "categories": [
        "Other"
    ],
    "galleryBanner": {
        "color": "#f0efe7",
        "theme": "light"
    },
    "icon": "images/git_icon.png",
    "activationEvents": [
        "onCommand:extension.gitCreatePatch",
        "onCommand:extension.gitApplyPatch"
    ],
    "keywords": [
        "git",
        "patch",
        "apply",
        "git patch"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/paragdiwan/vscode-git-patch"
    },
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.gitCreatePatch",
                "title": "Git: Creates a patch from staged files"
            },
            {
                "command": "extension.gitApplyPatch",
                "title": "Git: Apply a patch from existing patch file"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
